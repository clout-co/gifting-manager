# Supabase設定
# https://app.supabase.com でプロジェクトを作成し、以下の値を設定してください

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Claude AI API設定（AIアシスタント機能用）
# https://console.anthropic.com でAPIキーを取得してください
CLAUDE_API_KEY=sk-ant-api03-your-key-here

# Clout API連携（マスターデータ取得用）
# Clout Dashboardからブランド情報を取得
NEXT_PUBLIC_CLOUT_API_URL=https://clout-dashboard.vercel.app
NEXT_PUBLIC_CLOUT_API_KEY=your-shared-secret-here

# SSO認証（Clout Dashboard統合）
# trueに設定するとClout Dashboard SSOが有効になる
NEXT_PUBLIC_SSO_ENABLED=false
NEXT_PUBLIC_CLOUT_AUTH_URL=https://clout-dashboard.vercel.app
